---
import type { Lang } from "@/i18n/defaultLangOptions";
import { getRelativeLocaleUrl } from "astro:i18n";
import LanguagePicker from "./LanguagePicker.astro";

const navItems = {
  en: [
    {
      href: "/",
      text: "Home",
    },
    {
      href: "about",
      text: "About",
    },
    {
      href: "blog",
      text: "Blog",
    },
  ],
  es: [
    {
      href: "/",
      text: "Inicio",
    },
    {
      href: "about",
      text: "Nosotros",
    },
    {
      href: "blog",
      text: "Blog",
    },
  ],
};

const currentLocale = Astro.currentLocale as Lang;
---

<nav>
  <ul>
    {
      navItems[currentLocale].map((item) => (
        <li>
          <a href={getRelativeLocaleUrl(currentLocale, item.href)}>
            {item.text}
          </a>
        </li>
      ))
    }
  </ul>
  <LanguagePicker />
</nav>

<style>
  nav {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
  }
  ul {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }
</style>
